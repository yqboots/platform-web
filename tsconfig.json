{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@yq": [
        "@yq/"
      ],
      "@docs": [
        "@doc/"
      ],
      "@showcase": [
        "@showcase/"
      ],
      "core": [
        "../dist/core"
      ],
      "core/*": [
        "../dist/core/*"
      ],
      "components": [
        "../dist/components"
      ],
      "components/*": [
        "../dist/components/*"
      ],
      "extensions": [
        "../dist/extensions"
      ],
      "extensions/*": [
        "../dist/extensions/*"
      ]
    }
  }
}